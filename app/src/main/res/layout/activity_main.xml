<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="190dp"
        app:layout_constraintEnd_toStartOf="@+id/love"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/instagram_logo" />

    <ImageView
        android:id="@+id/love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toStartOf="@+id/send"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_heart" />

    <ImageView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_share" />

    <ImageView
        android:id="@+id/user_story"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="18dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instagram"
        app:srcCompat="@drawable/user_story"/>

    <ImageView
        android:id="@+id/assetsStory1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/instagram"
        app:layout_constraintStart_toEndOf="@+id/user_story"
        app:srcCompat="@drawable/asset_story"/>

    <ImageView
        android:id="@+id/ligaStory1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="18dp"
        android:text="Button3"
        app:layout_constraintStart_toEndOf="@+id/assetsStory1"
        app:layout_constraintTop_toBottomOf="@+id/instagram"
        app:srcCompat="@drawable/liga_story"/>

    <ImageView
        android:id="@+id/assetsStory2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:text="Button3"
        app:layout_constraints_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ligaStory1"
        app:layout_constraintTop_toBottomOf="@+id/instagram"
        app:srcCompat="@drawable/asset_story"/>

    <ImageView
        android:id="@+id/ligaStory2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="18dp"
        android:text="Button3"
        app:layout_constraintStart_toEndOf="@+id/assetsStory2"
        app:layout_constraintTop_toBottomOf="@+id/instagram"
        app:srcCompat="@drawable/liga_story"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="180dp">



        <ImageView
            android:id="@+id/pp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_story"
            app:srcCompat="@drawable/fufufafa_pp"/>

        <TextView
            android:id="@+id/textpp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Fufufafa"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/pp"
            app:layout_constraintTop_toBottomOf="@+id/user_story"/>

        <TextView
            android:id="@+id/descpp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="putra Mulyono"
            app:layout_constraintStart_toEndOf="@+id/pp"
            app:layout_constraintTop_toBottomOf="@+id/textpp"/>

        <ImageView
            android:id="@+id/feedFufufafa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/pp"
            app:srcCompat="@drawable/post_fufufafa"/>

        <ImageView
            android:id="@+id/loveFeed1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="470dp"
            app:layout_constraintTop_toBottomOf="@+id/feedFufufafa"
            app:srcCompat="@drawable/ic_heart"/>

        <ImageView
            android:id="@+id/comment1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="470dp"
            app:layout_constraintStart_toEndOf="@+id/loveFeed1"
            app:layout_constraintTop_toBottomOf="@+id/feedFufufafa"
            app:srcCompat="@drawable/ic_comment"/>

        <ImageView
            android:id="@+id/send1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="470dp"
            app:layout_constraintStart_toEndOf="@+id/comment1"
            app:layout_constraintTop_toBottomOf="@+id/feedFufufafa"
            app:srcCompat="@drawable/ic_share"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Disukai oleh Ikhwan_Hanif"
            app:layout_constraintTop_toBottomOf="@+id/feedFufufafa"/>














</androidx.constraintlayout.widget.ConstraintLayout>